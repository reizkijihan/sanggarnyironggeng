<form action="/karyawan/<%= karyawan._id %>?_method=PUT" method="post">
    <div class="modal fade" id=modal<%=karyawan.id%> tabindex="-1" role="dialog"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Non Aktif <%= karyawan.nama%></h5>
                    <button type=" button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <i class="far fa-times-circle fa-5x text-danger d-flex justify-content-center"></i>
                    <p class="text-center mt-3 mx-5 h5">Apakah anda benar-benar ingin meNon-Aktifkan karyawan ini? Aksi
                        ini tidak
                        dapat dibatalkan.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kembali</button>
                    <button type="submit" class="btn btn-danger" id="statuskaryawan">Non-Aktif</button>
                </div>
            </div>
        </div>
    </div>
</form>